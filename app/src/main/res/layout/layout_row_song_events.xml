<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/swipe_downvote_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/colorRed"
        android:clickable="true"
        android:contentDescription="@string/description_downvote_song_button"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swipe_play_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_thumb_down_black_24dp"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m" />

    <ImageButton
        android:id="@+id/swipe_upvote_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/colorGreen"
        android:clickable="true"
        android:contentDescription="@string/description_upvote_song_button"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swipe_downvote_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_thumb_up_white_24dp"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m" />

    <ImageButton
        android:id="@+id/swipe_play_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:contentDescription="@string/description_downvote_song_button"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swipe_play_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_white_24dp"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m" />

    <ImageButton
        android:id="@+id/swipe_delete_button"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/colorLightGray"
        android:clickable="true"
        android:contentDescription="@string/description_upvote_song_button"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swipe_upvote_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        tools:ignore="UnusedAttribute"
        tools:targetApi="m" />

</LinearLayout>