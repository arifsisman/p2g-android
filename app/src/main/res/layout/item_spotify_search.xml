<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

        <TextView
            android:id="@+id/search_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:paddingStart="52dp"
            android:paddingEnd="35dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="@string/placeholder_search_model_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_model_image" />

        <TextView
            android:id="@+id/search_model_type_and_artists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingStart="52dp"
            android:paddingEnd="35dp"
            android:singleLine="true"
            android:text="@string/placeholder_search_model_artists"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/search_model_name"
            app:layout_constraintTop_toBottomOf="@+id/search_model_name" />

        <ImageView
            android:id="@+id/search_model_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/description_search_model_cover_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

    </androidx.constraintlayout.widget.ConstraintLayout>
